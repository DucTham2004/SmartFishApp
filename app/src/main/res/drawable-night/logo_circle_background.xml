<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#30000000"/>
            <size
                android:width="144dp"
                android:height="144dp"/>
        </shape>
    </item>
    <!-- Main circle with gradient -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#2D3748"
                android:endColor="#1A202C"
                android:type="linear"/>
            <stroke
                android:width="3dp"
                android:color="#4A5568"/>
        </shape>
    </item>
</layer-list>

